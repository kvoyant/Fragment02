<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/changeFragOneBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="1번 프래그먼트"/>
            <Button
                android:id="@+id/changeFragTwoBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="2번 프래그먼트"/>
            <Button
                android:id="@+id/changeFragThreeBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="3번 프래그먼트"/>
        </LinearLayout>
        
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <fragment
                    android:id="@+id/fragOne"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    class="com.tjeit.fragment02.fragments.FragmentOne"/>

                <fragment
                    android:id="@+id/fragTwo"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    class="com.tjeit.fragment02.fragments.FragmentTwo"/>

                <!-- 세번째 프래그먼트 생성. -->
                <!-- 세로는 150dp -->
                <!-- JAVA + 데이터바인딩으로 문구 표현 -->
                <fragment
                    android:id="@+id/fragThree"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    class="com.tjeit.fragment02.fragments.FragmentThree"/>


            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>
</layout>
